{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*\\.e2e-spec\\.ts$",
  "moduleNameMapper": {
    "^(\\.{1,2}/)+generated/prisma/client$": "<rootDir>/test/mocks/prisma-client.mock.ts"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
