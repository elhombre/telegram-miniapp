NODE_ENV=development
BOT_MODE=polling
TELEGRAM_BOT_TOKEN=replace_with_bot_token
TELEGRAM_MINIAPP_URL=https://example.com/miniapp
TELEGRAM_MINIAPP_SHORT_NAME=
TELEGRAM_MENU_BUTTON_TEXT=Open Mini App
TELEGRAM_START_PAYLOAD_TTL_SECONDS=900
# Must match apps/backend/.env:PORT and root .env:BACKEND_PORT.
BACKEND_PORT=3000
# Required: localhost for local runs, docker-compose overrides this to backend service DNS.
BACKEND_HOST=localhost
TELEGRAM_BOT_LINK_SECRET=

# Webhook settings (required when BOT_MODE=webhook)
TELEGRAM_WEBHOOK_BASE_URL=https://example.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=replace_with_webhook_secret
# Must match root .env:BOT_WEBHOOK_PORT for Docker Compose runs.
TELEGRAM_WEBHOOK_PORT=3200
