{
  "name": "bot",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "BOT_MODE=polling node --enable-source-maps --import tsx src/main.ts",
    "dev:webhook": "BOT_MODE=webhook node --enable-source-maps --import tsx src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --enable-source-maps dist/main.js",
    "start:webhook": "BOT_MODE=webhook node --enable-source-maps dist/main.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "grammy": "^1.38.4"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  }
}
